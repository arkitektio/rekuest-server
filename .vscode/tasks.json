// tasks.json
{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Serve",
            "type": "shell",
            "command": "python manage.py runserver 0.0.0.0:8090"
        },
        {
            "label": "Update Schema",
            "type": "shell",
            "command": "python manage.py makemigrations && python manage.py migrate"
        },
        {
            "label": "Dump Schema",
            "type": "shell",
            "command": "python manage.py graphql_schema --out schema.graphql"
        },
        {
            "label": "Gateway",
            "type": "shell",
            "command": "python manage.py runworker gateway"
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "docker build -t jhnnsrs/arkitekt:prod ."
        },
        {
            "label": "Reserver",
            "type": "shell",
            "command": "python manage.py runreserver"
        },
    ]
}